<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GnAirPlaneModeLightTheme" parent="@amigo:style/Theme.Amigo.Light">
        <item name="android:dropDownListViewStyle">@style/GNdropDownListViewStyle</item>
        <item name="android:actionBarTabStyle">@style/LightActionBarTabView</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBarTheme</item>
        <item name="amigo:amigoactionBarStyle">@style/LightActionBarStyle</item>
    </style>
    <style name="GnAirPlaneModeDarkTheme" parent="@amigo:style/Theme.Amigo.Dark">
        <item name="android:actionBarStyle">@style/DarkActionBarStyle</item>
    </style>
    <style name="LightActionBarStyle" parent="@amigo:style/Widget.Amigo.Light.ActionBar.Solid">
        <item name="amigo:amigobackground">@color/gn_actionbar_color</item>
        <item name="amigo:amigobackgroundStacked">@color/gn_actionbar_color</item>
    </style>
    <style name="LightActionBarTabView" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/gn_action_bar_item_back</item>
    </style>
    <style name="Gn_actionBarTabTextStyle" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textSize">@dimen/gn_action_bar_tab_textsize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:dropDownListViewStyle">@style/ListViewDropdownStyle</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">#ffcccccc</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
    </style>
    <style name="GNTextAppearance" parent="@android:style/TextAppearance.Inverse">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="GNpopupMenuStyle" parent="@android:style/Widget.Holo.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>
    <style name="GNdropDownListViewStyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
    </style>
    <style name="DarkActionBarStyle" parent="@amigo:style/Widget.Amigo.Dark.ActionBar" />
    <style name="ListViewDropdownStyle" parent="@android:style/Widget.ListView.DropDown">
        <item name="android:listSelector">?android:listChoiceBackgroundIndicator</item>
    </style>
    <style name="AppTheme" parent="@amigo:style/Theme.Amigo.Light" />
</resources>
